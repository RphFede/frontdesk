// Variables CSS
:root
  --bg-primary #F5F5F5 // offWhite
  --bg-secondary #FFFFFF // white
  --bg-card #FFFFFF // white
  --text-primary #333333 // dark grey
  --text-secondary #666666 // medium grey
  --accent-primary #FF8C00 // orange
  --accent-hover #FFA500 // light orange
  --border-color #E0E0E0 // light grey
  --success-color #4CAF50 // green
  --warning-color #FFC107 // amber
  --error-color #F44336 // red
  --table-hover #F0F0F0 // very light grey

// Reset b√°sico
*
  margin 0
  padding 0
  box-sizing border-box

html, body
  margin 0
  padding 0
  width 100%
  height 100%
  overflow hidden

body
  color var(--text-primary)
  font-family 'Segoe UI', system-ui, sans-serif
  font-size 14px
  line-height 1.5

.view-container
  max-width 1200px
  margin 0 auto
  padding 2rem

h1
  font-size 1.5rem
  font-weight 600
  margin-bottom 2rem

h2, h3
  color var(--text-primary)
  margin-bottom 1rem

h2
  font-size 1.3rem
  font-weight 500

h3
  font-size 1.1rem
  font-weight 500

table
  width 100%
  border-collapse collapse
  background var(--bg-card)
  border-radius 8px
  overflow hidden
  
  th, td
    padding 0.75rem
    text-align left
    border-bottom 1px solid var(--border-color)
  
  th
    background var(--bg-secondary)
    font-weight 600
    color var(--text-primary)
  
  tr:hover
    background var(--table-hover)

button
  border none
  cursor pointer
  transition all 0.2s ease
  font-family inherit

input, select, textarea
  background var(--bg-secondary)
  border 1px solid var(--border-color)
  color var(--text-primary)
  padding 0.5rem
  border-radius 4px
  font-family inherit
  
  &:focus
    outline none
    border-color var(--accent-primary)

// Scrollbars
::-webkit-scrollbar
  width 8px
  height 8px

::-webkit-scrollbar-track
  background var(--bg-secondary)

::-webkit-scrollbar-thumb
  background var(--border-color)
  border-radius 4px
  
  &:hover
    background var(--text-secondary)
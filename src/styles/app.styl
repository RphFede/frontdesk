// Variables CSS
:root
  --bg-primary #2a2a2a
  --bg-secondary #3a3a3a
  --bg-card #454545
  --text-primary #d0d0d0
  --text-secondary #a8a8a8
  --accent-primary #6b9bd1
  --accent-hover #7ba3d6
  --border-color #5a5a5a
  --success-color #6b9b6b
  --warning-color #d1a66b
  --error-color #d17a7a
  --table-hover #404040

// Reset b√°sico
*
  margin 0
  padding 0
  box-sizing border-box

html, body
  margin 0
  padding 0
  width 100%
  height 100%
  overflow hidden

body
  background var(--bg-primary)
  color var(--text-primary)
  font-family 'Segoe UI', system-ui, sans-serif
  font-size 14px
  line-height 1.5

// Elementos base
h1, h2, h3
  color var(--text-primary)
  margin-bottom 1rem

h1
  font-size 1.5rem
  font-weight 600

h2
  font-size 1.3rem
  font-weight 500

h3
  font-size 1.1rem
  font-weight 500

table
  width 100%
  border-collapse collapse
  background var(--bg-card)
  border-radius 8px
  overflow hidden
  
  th, td
    padding 0.75rem
    text-align left
    border-bottom 1px solid var(--border-color)
  
  th
    background var(--bg-secondary)
    font-weight 600
    color var(--text-primary)
  
  tr:hover
    background var(--table-hover)

button
  border none
  cursor pointer
  transition all 0.2s ease
  font-family inherit

input, select
  background var(--bg-card)
  border 1px solid var(--border-color)
  color var(--text-primary)
  padding 0.5rem
  border-radius 4px
  font-family inherit
  
  &:focus
    outline none
    border-color var(--accent-primary)

// Scrollbars
::-webkit-scrollbar
  width 8px
  height 8px

::-webkit-scrollbar-track
  background var(--bg-secondary)

::-webkit-scrollbar-thumb
  background var(--border-color)
  border-radius 4px
  
  &:hover
    background var(--text-secondary)
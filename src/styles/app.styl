// Variables globales del sistema
:root
  --bg-primary #2a2a2a
  --bg-secondary #3a3a3a
  --bg-card #454545
  --text-primary #d0d0d0
  --text-secondary #a8a8a8
  --accent-primary #6b9bd1
  --accent-hover #7ba3d6
  --border-color #5a5a5a
  --success-color #6b9b6b
  --warning-color #d1a66b
  --error-color #d17a7a
  --table-hover #404040

// Reset y Base para Aplicación de Escritorio
*
  margin 0
  padding 0
  box-sizing border-box

body
  background var(--bg-primary)
  color var(--text-primary)
  font-family 'Segoe UI', system-ui, sans-serif
  font-size 14px
  line-height 1.5
  overflow-x hidden

// Header Principal del Sistema
.app-header
  background var(--bg-secondary)
  padding 1rem 2rem
  border-bottom 2px solid var(--border-color)
  display flex
  justify-content space-between
  align-items center
  
  h1
    color var(--accent-primary)
    font-size 1.5rem
    font-weight 600
    margin 0
    
  .user-info
    color var(--text-secondary)
    font-size 0.9rem

// Navegación Horizontal Optimizada
.app-navigation
  display flex
  background var(--bg-secondary)
  padding 0 2rem
  border-bottom 1px solid var(--border-color)
  overflow-x auto

.nav-btn
  padding 1rem 1.5rem
  border none
  background transparent
  color var(--text-secondary)
  cursor pointer
  transition all 0.2s ease
  border-bottom 3px solid transparent
  white-space nowrap
  font-weight 500
  
  &:hover
    background rgba(208,208,208,0.05)
    color var(--text-primary)
    
  &.active
    color var(--accent-primary)
    border-bottom-color var(--accent-primary)
    background rgba(107,155,209,0.1)

// Scrollbars personalizados
::-webkit-scrollbar
  width 8px
  height 8px

::-webkit-scrollbar-track
  background var(--bg-secondary)

::-webkit-scrollbar-thumb
  background var(--border-color)
  border-radius 4px
  
  &:hover
    background var(--text-secondary)
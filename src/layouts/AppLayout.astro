---
const { title } = Astro.props;
import '../styles/app.styl';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="theme-color" content="#2a2a2a">
</head>
<body>
  <div class="container">
    <slot />
  </div>
</body>
</html>

<style lang="stylus">
  .container
    height 100vh
    width 100vw
    display flex
    position fixed
    top 0
    left 0
    
  @media (max-width: 768px)
    .container
      flex-direction column
</style>
---
const { title } = Astro.props;
import '../styles/app.styl';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="theme-color" content="#2a2a2a">
</head>
<body>
  <div class="app-container">
    <slot />
  </div>
</body>
</html>

<style lang="stylus">
  .app-container
    min-height 100vh
    background var(--bg-primary)
</style>
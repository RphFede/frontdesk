---
import ViewHeader from '../components/ViewHeader.astro';
---

<section id="dashboard-view" class="view">

  <ViewHeader title="Resumen General" icon="/svg/dollar.svg" />

  <div class="bank-resume">
    <h2>Resumen de cuentas</h2>
    <div class="bank-accounts">
      <div class="bank-account">
        <h3>Fondo Permanente</h3>
        <span class="number" id="total-amount">$0</span>
      </div>
      <div class="bank-account">
      <h3>Agua y Saneamiento</h3>
       <span class="number" id="total-amount">$0</span>
      </div>
      <div class="bank-account">
       <h3>Alumbrado PÃºblico</h3>
       <span class="number" id="total-amount">$0</span>
      </div>
      <div class="bank-account">
        <h3>Obras Viales</h3>
        <span class="number" id="total-amount">$0</span>
      </div>
    <div>
  </div>
  
  <div class="recent">
    <h2>Facturas Recientes</h2>
    <table>
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Proveedor</th>
          <th>Monto</th>
          <th>Estado</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody id="recent-tbody">
       <tr>
        <td colspan="5" class="no-data">Cargando facturas...</td>
       </tr>
      </tbody>
    </table>
  </div>

</section>

<style lang="stylus">

.bank-resume
  display flex
  flex-direction column

.bank-accounts
  display flex
  flex-direction row
  gap 1.5rem
  margin-bottom 2rem

  .bank-account
    background var(--bg-card)
    padding 1.5rem
    border-radius 8px
    border 1px solid var(--border-color)
    text-align center
    
    h3
      font-size 0.9rem
      color var(--text-secondary)
      margin-bottom 0.5rem
      text-transform uppercase
      letter-spacing 0.5px
    
    .number
      display block
      font-size 2rem
      font-weight 700
      color var(--accent-primary)
      margin-bottom 0.25rem
    
    .date
      font-size 0.8rem
      color var(--text-secondary)

.recent
  display flex
  flex-direction column
  margin-top 2rem
  
  h2
    margin-bottom 1rem
    color var(--text-primary)

.status
  padding 0.25rem 0.5rem
  border-radius 4px
  font-size 0.8rem
  font-weight 500
  
  &.pending
    background var(--warning-color)
    color white
  
  &.paid
    background var(--success-color)
    color white

.btn-sm
  padding 0.25rem 0.5rem
  background var(--accent-primary)
  color white
  border-radius 4px
  font-size 0.8rem
  
  &:hover
    background var(--accent-hover)
</style>
<div>
  <h1>🧾 Gestión de Facturas</h1>
  
  <div class="toolbar">
    <div class="left">
      <input type="text" placeholder="🔍 Buscar por proveedor, monto, etc...">
      <select>
        <option>Todos los estados</option>
        <option>Pendientes</option>
        <option>Pagadas</option>
        <option>Vencidas</option>
      </select>
    </div>
    <div class="right">
      <button class="success" id="new-invoice-btn">➕ Nueva Factura</button>
      <button class="primary">📤 Exportar</button>
    </div>
  </div>
  
  <div class="form-section" id="invoice-form" style="display: none;">
    <h2>➕ Registrar Nueva Factura</h2>
    <form>
      <div class="row">
        <div class="group">
          <label for="supplier">🏢 Proveedor *</label>
          <select id="supplier" required>
            <option value="">Seleccionar proveedor...</option>
            <option>Constructora ABC S.A.</option>
            <option>Suministros Municipales Ltda.</option>
          </select>
        </div>
        <div class="group">
          <label for="invoice-date">📅 Fecha de Emisión *</label>
          <input type="date" id="invoice-date" required>
        </div>
      </div>
      
      <div class="row">
        <div class="group">
          <label for="amount">💰 Monto *</label>
          <input type="number" id="amount" placeholder="0.00" step="0.01" required>
        </div>
        <div class="group">
          <label for="invoice-number">📄 Número de Factura</label>
          <input type="text" id="invoice-number" placeholder="Ej: FAC-2024-001">
        </div>
      </div>
    </form>
  </div>
</div>

<style lang="stylus">
.toolbar
  display flex
  justify-content space-between
  align-items center
  margin-bottom 2rem
  padding 1rem
  background var(--bg-card)
  border-radius 8px
  border 1px solid var(--border-color)
  
  .left, .right
    display flex
    gap 1rem
    align-items center
  
  input[type="text"]
    width 300px
  
  button
    padding 0.5rem 1rem
    border-radius 4px
    font-weight 500
    
    &.success
      background var(--success-color)
      color white
      
      &:hover
        background #5a8a5a
    
    &.primary
      background var(--accent-primary)
      color white
      
      &:hover
        background var(--accent-hover)

.form-section
  background var(--bg-card)
  padding 2rem
  border-radius 8px
  border 1px solid var(--border-color)
  margin-bottom 2rem
  
  .row
    display flex
    gap 1rem
    margin-bottom 1rem
    
    .group
      flex 1
      
      label
        display block
        margin-bottom 0.5rem
        color var(--text-primary)
        font-weight 500
      
      input, select
        width 100%
</style>
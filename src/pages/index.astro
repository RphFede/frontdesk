---
import BaseLayout from "../layouts/BaseLayout.astro"
---
<BaseLayout>
<section id="dashboard-view" class="view">

  <h1>Resumen General</h1>

<div class="view-container">
  <div class="bank-resume">
    <h2>Estado de cuentas</h2>
    <div class="bank-accounts">
      <div class="bank-account">
        <h3>Fondo Permanente</h3>
        <span class="number" id="total-amount">$0</span>
      </div>
      <div class="bank-account">
      <h3>Agua y Saneamiento</h3>
       <span class="number" id="total-amount">$0</span>
      </div>
      <div class="bank-account">
       <h3>Alumbrado Público</h3>
       <span class="number" id="total-amount">$0</span>
      </div>
      <div class="bank-account">
        <h3>Inf. Vial y Desagües</h3>
        <span class="number" id="total-amount">$0</span>
      </div>
    <div>
  </div>
  </div>
  
  <div class="recent">
    <h2>Facturas Recientes</h2>
    <table>
      <thead>
        <tr>
          <th>Prog.</th>
          <th>Proveedor</th>
          <th>Monto</th>
          <th>Fecha</th>
          <th>Estado</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody id="recent-tbody">
       <tr>
        <td colspan="5" class="no-data">Cargando facturas...</td>
       </tr>
      </tbody>
    </table>
  </div>
</div>
</section>
</BaseLayout>

<style lang="stylus">

section
  display flex
  flex-direction column

.bank-accounts
  display flex
  flex-direction row
  justify-content space-evenly
  row-gap 1.5rem

  .bank-account
    background transparent
    padding 1.5rem
    text-align center
    
    h3
      font-size 0.9rem
      color var(--text-secondary)
      margin-bottom 0.5rem
      text-transform uppercase
      letter-spacing 0.5px
    
    .number
      display block
      font-size 2rem
      font-weight 700
      color var(--accent-primary)
      margin-bottom 0.25rem
    
    .date
      font-size 0.8rem
      color var(--text-secondary)

.recent
  
  h2
    margin-bottom 1rem
    color var(--text-primary)

.status
  padding 0.25rem 0.5rem
  border-radius 4px
  font-size 0.8rem
  font-weight 500
  
  &.pending
    background var(--warning-color)
    color white
  
  &.paid
    background var(--success-color)
    color white

.btn-sm
  padding 0.25rem 0.5rem
  background var(--accent-primary)
  color white
  border-radius 4px
  font-size 0.8rem
  
  &:hover
    background var(--accent-hover)
</style>